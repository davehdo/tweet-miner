<p id="notice"><%= notice %></p>

<h1>Tweet Queries<%= " for #{@channel.name}" if @channel %></h1>


<div id="chart_div" style="width: 900px; height: 300px"></div>


    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart', "line"]});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {

        var data = new google.visualization.DataTable();
        data.addColumn('date', 'Date');
        data.addColumn('number', 'Tweets per hour');
        data.addColumn('number', 'Price in USD');

        data.addRows(<%= 
          (
            @tweets.collect {|t| [t.created_at, t.unique_tweets_per_hour.round, nil ]} +
            ExchangeRate.all.collect {|t| [t.created_at, nil, t.price_of(@channel.symbol) ]}
          ).to_json.html_safe %>
          .map(function(e) {return [new Date(e[0]), e[1], e[2]]}))

        var options = {
          title: 'Tweets per hour',
          width: 900,
          height: 300,
          hAxis: {
            format: 'M/d/yy',
            gridlines: {count: 15}
          },
          vAxis: {
            gridlines: {color: 'none'},
            minValue: 0
          },
          series: {
              0: {axis: 'n'},
              1: {axis: 'price'}
            },
          axes: {
            y: {
              'n': {label: 'Tweets per hour'},
              'price': {label: 'Price in USD', format: 'currency'}
            }
          },
        };
        var materialChart = new google.charts.Line(document.getElementById('chart_div'));
        materialChart.draw(data, google.charts.Line.convertOptions(options));

        // var chart = new google.visualization.LineChart(document.getElementById('chart_div'));

        // chart.draw(data, options);
      }

</script>
      
<table class="table">
  <thead>
    <tr>
      <th>n Results</th>
      <th>Result posted time-range</th>
      <th>Query performed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
    
    <%
    

    earliest_at = Time.parse( tweet.parsed_json.last["created_at"] )
    latest_at = Time.parse( tweet.parsed_json.first["created_at"] )
    
    %>
      <tr>
        <td><%= tweet.parsed_json.size %> 
          (<%= tweet.n_unique_tweets %> unique text)
        </td>
        <td><%= earliest_at.strftime("%Y-%m-%d %H:%M") %> &mdash; 
          <%= latest_at.strftime(earliest_at.to_date == latest_at.to_date ? "%H:%M" : "%m-%d %H:%M") %>
        </td>
        <td><%= time_ago_in_words( tweet.created_at ) %> ago</td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Show Expanded', "#{tweet_path(tweet)}?expanded=t" %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @channel %>
<%= link_to "Rerun query", rerun_query_channel_path( @channel ), class: "btn btn-default" %>
<% end %>